{{#> _base }}
{{#*inline "contents"}}
<div class="container">
  <div class="row">
    <div class="col 12">

      <div class="section">
        <h1>Item Information</h1>
        <a class="btn waves-effect waves-light red darken-1" href="/item/{{listing.item_iid}}">Info</a>
        <a class="btn waves-effect waves-light red darken-1" href="/item/{{listing.item_iid}}/listing">Listing</a>
        <a class="btn waves-effect waves-light red darken-1" href="/item/{{listing.item_iid}}/review">Reviews</a>
      </div>
      <div class="divider"></div>

    </div>
  </div>

  <div class="row">
    <div class="section">
      <h2>{{listing.title}}</h2>
      <p><b>Status:</b> {{listing.status}}</p>
      <p><b>Delivery Method:</b> {{listing.delivery_method}}</p>
      <p><b>Minimum Bid Required:</b> ${{listing.min_bid}}</p>
      <p><b>Bid Start:</b> {{listing.listingstart}}</p>
      <p><b>Bid End:</b> {{listing.time_ending}}</p>
    </div>
    <div class="divider"></div>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th>Bidder</th>
          <th>Amount</th>
          <th>Bidded On</th>
        </tr>
      </thead>

      <tbody>
        {{#each bids}}
        <tr>
          <td>{{this.bidder_uid}}</td>
          <td>${{this.amount}}</td>
          <td>{{this.biddedon}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>
{{/inline}}
{{/_base}}