{{#> _base }}
{{#*inline "contents"}}
<div class="container">
  <div class="row">
    <div class="col 12">

      <div class="section">
        <h1>Item Information</h1>
        <a class="btn waves-effect waves-light red darken-1" href="/item/{{item.iid}}">Info</a>
        <a class="btn waves-effect waves-light red darken-1" href="/item/{{item.iid}}/listing">Listing</a>
        <a class="btn waves-effect waves-light red darken-1" href="/item/{{item.iid}}/review">Reviews</a>
      </div>
      <div class="divider"></div>

    </div>
  </div>

  <div class="row">
    <div class="section">
      <div class="col s12">
        <div class="card waves-effect waves-block">
          <div class="card-image">
            <div class="img-fit listing-item-image"
              style="background-image: url('https://media.karousell.com/media/photos/products/2018/10/07/buy_1538918236_d4243b29.jpg');">
            </div>
            <form method="POST" action="/item/{{item.iid}}/like">
              {{#if liked}}
              <button type="submit" class="btn-floating btn-large halfway-fab waves-effect waves-red white"><i
                  class="material-icons red-text text-darken-1">favorite</i></button>
              {{else}}
              <button type="submit" class="btn-floating btn-large halfway-fab waves-effect waves-red white"><i
                  class="material-icons red-text text-darken-1">favorite_border</i></button>
              {{/if}}
            </form>
          </div>
          <div class="card-content">
            <span class="card-title"><b>{{item.item_name}}</b></span>
            <p><b>Uploaded By:</b> {{item.owner_uid}}</p>
            <p><b>Category:</b> {{item.category}}</p>
            <p><b>Status:</b> {{item.status}}</p>
            <hr>
            <span><b>Description</b></span>
            <br>
            <p>{{item.description}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
{{/inline}}
{{/_base}}