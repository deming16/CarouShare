{{#> _base }}
{{#*inline "contents"}}


<div class="container">
  <h1>{{user.uid}}'s Profile</h1>
  <h2>personal details</h2>
  <ul>
    <li>mobile - {{user.mobile}}</li>
    <li>email - {{user.email}}</li>
    <li>address - {{user.address}}</li>
  </ul>

  <h2>Items</h2>
  <ul>
    {{#each items}}
    <li>{{this.item_name}}</li>
    {{/each}}
  </ul>
  <h2>Likes</h2>
  <ul>
    {{#each likes}}
    <li>{{this.item_name}}</li>
    {{/each}}
  </ul>
  <h2>Following</h2>
  <ul>
    {{#each following}}
    <li>{{this.followee_uid}}</li>
    {{/each}}
  </ul>
  <h2>Followers</h2>
  <ul>
    {{#each followers}}
    <li>{{this.follower_uid}}</li>
    {{/each}}
  </ul>
</div>
{{/inline}}
{{/_base}}